# ============================================
# CLARIX Server Environment Variables
# ============================================

# Server
PORT=3000
NODE_ENV=development

# Database (SQLite for dev, PostgreSQL for prod)
DATABASE_URL="file:./prisma/dev.db"
# DATABASE_URL="postgresql://user:password@localhost:5432/clarix?schema=public"

# Redis (optional — falls back to in-memory cache if unavailable)
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET="your-strong-secret-key-change-this"
JWT_EXPIRES_IN="7d"

# OpenAI / LLM
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"

# Public API Key (for browser extension during development)
PUBLIC_API_KEY="clarix-dev-api-key"

# Vector Database (for production RAG — MVP uses in-memory)
# VECTOR_DB_API_KEY=""
# VECTOR_DB_ENVIRONMENT=""
# VECTOR_DB_INDEX="clarix-embeddings"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL (seconds)
CACHE_TTL_ANALYSIS=3600
CACHE_TTL_FEED=300
