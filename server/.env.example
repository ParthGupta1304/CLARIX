# Server
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/clarix?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# API Keys
PUBLIC_API_KEY="clarix-public-api-key-change-in-production"

# OpenAI / LLM Provider
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"

# Vector Database (Pinecone example)
VECTOR_DB_API_KEY="your-vector-db-api-key"
VECTOR_DB_ENVIRONMENT="us-east-1"
VECTOR_DB_INDEX="clarix-embeddings"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL (seconds)
CACHE_TTL_ANALYSIS=3600
CACHE_TTL_FEED=300
